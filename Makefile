# ---------------------------------------------------------------------
# Compiler selection 
# ---------------------------------------------------------------------

CCC = g++-8

# ---------------------------------------------------------------------
# Compiler options 
# ---------------------------------------------------------------------

CCOPT = -O -std=c++17 -pthread -Wall -flto -pipe

# ---------------------------------------------------------------------
# Link options and libraries
# ---------------------------------------------------------------------

INCDIRS = 

# ---------------------------------------------------------------------
# Temporary folder
# ---------------------------------------------------------------------

TARGET = mdpsolver

all: $(TARGET)

CCFLAGS = $(CCOPT)

SRC = $(shell find src -name *.cpp)
OBJ = $(SRC:%.cpp=%.o)


# ------------------------------------------------------------

clean:
	/bin/rm -rf $(TARGET)
	/bin/rm -rf $(OBJ)
	/bin/rm -rf output/*

# ------------------------------------------------------------
# The code
# ------------------------------------------------------------

$(TARGET): $(OBJ)
	$(CCC) $(CCFLAGS) -o $(TARGET) $(OBJ)

%.o: %.cpp
	$(CCC) -c $(CCFLAGS) $< -o $@

# Local Variables:
# mode: makefile
# End:
